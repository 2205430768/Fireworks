<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#CDCD00"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <ImageView 
        android:layout_marginTop="5dip"
        android:layout_width="100dip"
        android:layout_height="60dip"
        android:src="@drawable/hanmei"
        
        />
   
      <TextView
        android:padding="20dip"
         android:layout_weight="1"
        android:background="@drawable/tx1"
        android:id="@+id/textView1"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:text="好好好，我介绍个帅的给你认识认识。" />
    <ImageView 
        android:layout_width="100dip"
        android:layout_height="70dip"
        android:src="@drawable/tai"
        />
      <TextView
           android:padding="30dip"
         android:layout_weight="1"
        android:background="@drawable/tx2"
        android:id="@+id/textView1"
        android:textColor="#9ACD32"
        android:layout_width="fill_parent"
          android:layout_height="0dp"
        android:textSize="20sp"
        android:text="（没想到装作人妖还可以找到个帅的男朋友）赶快，赶快" />
      
 
      
</LinearLayout>
